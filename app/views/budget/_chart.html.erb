
<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {
        renderTo: "<%= whatdiv %>",
        <% if type.equals? "total" %>
          type: "bar",
        <% else %> 
          type: "pie",
        <% end %>
       },
      credits:{enabled:false},
      title: {
        text: "<%= title %>"
      },
      tooltip: {
        formatter: function() {
          return Highcharts.numberFormat(this.y, 2) + "%";
        }
      },
      series: [{
        data:[
          <%  points.each do |point| %>
            [<%=raw("\"#{point.name}\"")%>,<%= point.expenditure %>]
          ,
        <% end %>
        ]

      }]
    });
  });
</script>
